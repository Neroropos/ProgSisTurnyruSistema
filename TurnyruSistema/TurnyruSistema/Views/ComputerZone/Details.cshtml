@model TurnyruSistema.Models.Turnyras

@{
    ViewData["Title"] = "Details";
}

<h2>Kompiuterių zonų sąrašas</h2>

<p>
    <a asp-action="Create" asp-route-id="@Model.Id">Pridėti kompiuterių zoną</a>
</p>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.KompiuteriuZonos[0].Pavadinimas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KompiuteriuZonos[0].KompiuteriuSkaicius)
            </th>


            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model.KompiuteriuZonos)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Pavadinimas)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.KompiuteriuSkaicius)
                </td>





                <td>

                    <a asp-action="Edit" asp-route-id="@item.Id">Redaguoti kompiuterių zoną</a>


                </td>
            </tr>
        }
    </tbody>
</table>

@if (TempData["Message"] != null)
{
    <script type="text/javascript">
            window.onload = function () {
                alert("@TempData["Message"]");

            };
    </script>
    TempData.Remove("Message");
}

