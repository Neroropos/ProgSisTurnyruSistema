                <label asp-for="OrganizatoriusId" class="control-label"></label>
                <select asp-for="OrganizatoriusId" class ="form-control" asp-items="ViewBag.OrganizatoriusId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Grįžti</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
